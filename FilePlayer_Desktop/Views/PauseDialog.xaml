<UserControl x:Class="FilePlayer.Views.PauseDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <Grid>
        <StackPanel>

            <StackPanel x:Name="buttonPanel" Orientation="Vertical" HorizontalAlignment="Right" >
                <Button x:Name="returnToAppButton"  AutomationProperties.AutomationId="PauseReturnToAppButton" Margin="20,20,20,5" Height="60" Width="200" Click="Button_Click">Return to App</Button>
                <Button x:Name="closeAppButton" AutomationProperties.AutomationId="PauseCloseAppButton" Margin="20,5,20,5"  Height="60" Width="200" Click="Button_Click">Close App</Button>
                <Button x:Name="closeAllButton" AutomationProperties.AutomationId="PauseCloseAllButton" Margin="20,5,20,20" Height="60" Width="200" Click="Button_Click">Close App And FilePlayer</Button>
                
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>

