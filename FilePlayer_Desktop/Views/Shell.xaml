        <UserControl prism:RegionManager.RegionName="ItemListView" />
        <Canvas x:Name="dynamicCanvas">
            <views:CharGetter x:Name="charGetter" Visibility="Hidden" />
        </Canvas>
    </Grid>
    
</controls:MetroWindow>
